#SP Beats
#To be used as 'Presets' for live coding
#Coded by Davids Fiddle

use_random_seed 42


comment do  #Beat 1
  use_sample_bpm :loop_industrial
  with_fx :compressor do
    live_loop :drums do
      sample :loop_industrial
      sleep 1
    end
    live_loop :kik do
      sample :bd_haus if one_in(2)
      sleep 0.125
      sample :bd_haus if one_in(4)
      sleep 0.125
    end
  end
end

comment do  #Beat 2
  use_sample_bpm :loop_safari
  with_fx :slicer, phase: 0.5, pulse_width: 0.75 do
    live_loop :safari do
      sample :loop_safari
      sleep 1
    end
  end
  live_loop :hatz do
    sample :elec_cymbal, amp: 0.5, cutoff: (ring 120,100,80).choose if one_in(3)
    sample :drum_cymbal_soft, amp: 0.5 if one_in(4)
    sleep 0.125
  end
  live_loop :kik do
    sync :safari
    sample :bd_haus
  end
end

comment do  #Beat 3
  use_sample_bpm :loop_electric
  with_fx :slicer, pulse_width: 0.75, phase: 0.315, wave: 1, smooth: 0.1 do
    live_loop :beat do
      sample :loop_electric
      sleep 1
    end
  end
  live_loop :hatz do
    use_synth_defaults amp: 0.6, sustain: 0, release: 0.05
    synth :cnoise, cutoff: 100 if one_in(4)
    synth :pnoise, cutoff: 110, decay: 0.01 if one_in(6)
    sleep 0.125
  end
  live_loop :kik do
    sync :beat
    sample :bd_haus
  end
end

uncomment do  #Beat 4
  use_sample_bpm :loop_breakbeat
  with_fx :slicer, phase: 0.315, pulse_width: 0.75, smooth: 0.1 do
    live_loop :beat do
      sample :loop_breakbeat, amp: 2
      sleep 1
    end
  end
  live_loop :kik do
    sync :beat
    sample :bd_haus, cutoff: (range 90,120).choose
  end
end

live_loop :cues do
  #Cues for more code
  tick
  cue 'Beat',look
  sleep 0.125
end
